FROM node:22-alpine as build-stage

WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .
RUN npm run build

# Ø§Ù„Ù…Ø±Ø­Ù„Ø© 2: Ø§Ù„ØªØ´ØºÙŠÙ„ (Production Stage)
